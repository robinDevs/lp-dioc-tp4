{% extends 'base.html.twig' %}

{% block page_title 'Homepage' %}
{% block title 'Homepage' %}

{% block body %}
    <p>Welcome to TP4!</p>

    {#
     FIXME:
        Lister les utilisateurs mais pas les admins.
        L'utilisateur actuelement connecté doit être en gras.
        Au clique sur un utilisateur je suis redirigé sur sa page de profile
     #}
    {% if users %}
        <ul>
            {% for user in users %}
                <li>
                    <a href="profile/{{ user.getId() }}">
                        {{ user.getUsername() }}
                        {{ user.getFirstName() }}
                        {{ user.getLastName() }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}

{% endblock %}
